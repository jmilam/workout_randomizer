<%= render "partials/alert" %>

<div class="row">
  <div class="col-md-10 col-10 offset-1" id="login-profile-background">
    <div class="row">
      <%= image_tag 'logo', class: "rounded-image" %>
    </div>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="row">
        <div class="col-md-12 col-sm-12 form-group">
          <%= f.label :email %>
          <%= f.text_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
        </div>

        <div class="col-md-12 col-sm-12 form-group">
          <%= f.label :password, class: '' %>
          <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
        </div>
      </div>

      <!-- <div class="actions col-md-6 col-sm-6 offset-md-8"> -->
        <%= f.submit "Log in", class: "btn btn-lg btn-block workout-btn" %>
      <!-- </div> -->
    <% end %>
    <div class="col-md-12 col-12 text-right">
        <%= render "devise/shared/links" %>
    </div>
  </div>
</div>


