<div id="image-background" class="login-header">
  <h2 class="text-center" id="step-header">Log in</h2>
</div>

<%= render "partials/alert" %>

<div class="container" style="margin-top:75px;">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="row">
      <div class="col-md-12 col-sm-12 form-group">
        <%= f.label :email %>
        <%= f.text_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
      </div>

      <div class="col-md-12 col-sm-12 form-group">
        <%= f.label :password, class: '' %>
        <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
      </div>
    </div>

    <!-- <div class="actions col-md-6 col-sm-6 offset-md-8"> -->
      <%= f.submit "Log in", class: "btn btn-lg btn-block workout-btn" %>
    <!-- </div> -->
  <% end %>

  <div class="row">
<!--     <div class="col-md-6 col-6">
      <%#= link_to "Kiosk Mode", kiosk_path %>
    </div> -->
    <div class="col-md-12 col-12 text-right">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>

<div id="image-background" class="login-header" style="position:absolute;bottom:-10px;width:100%;height:100px;">
</div>