<!DOCTYPE html>
<html>
  <head>
    <title><%= @title.nil? ? 'Workout Randomizer' : @title %></title>
    <%= csrf_meta_tags %>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  	<nav class="navbar navbar-expand-lg navbar-dark bg-primary">
  		<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarToggler" aria-controls="navbarToggler" aria-expanded="false" aria-label="Toggle navigation">
		    <span class="navbar-toggler-icon"></span>
		  </button>
  		<div class="collapse navbar-collapse" id="navbarToggler">
  			<ul class="navbar-nav">
          <li><%= link_to "Profile", profile_index_path, class: 'nav-link' %></li>
          <li><%= link_to "Workouts", list_workouts_path, class: 'nav-link' %></li>
          <li><%= link_to "Categories", category_index_path, class: 'nav-link' %></li>
		  		<li><%= link_to "Sign Out", destroy_user_session_path, method: :delete, class: 'nav-link' %></li>
		  	</ul>
		  </div>
		</nav>

    <div style="margin-top:50px;">
      <div class="container">
        <% unless notice.nil? %>
      	 	<p class="notice alert alert-primary alert-dismissible fade show" role="alert">
      	 		<%= notice %>
      	 		<button type="button" class="close" data-dismiss="alert" aria-label="Close">
					    <span aria-hidden="true">&times;</span>
					  </button>		
      	 	</p>
        <% end %>

        <% unless alert.nil? %>
          <p class="alert alert-danger alert-dismissible fade show" role="alert"">
          	<%= alert %>
          	<button type="button" class="close" data-dismiss="alert" aria-label="Close">
					    <span aria-hidden="true">&times;</span>
					  </button>
          </p>
        <% end %>
      </div>

      <div class="container">
        <%= yield %>
      </div>
    </div>
  </body>
</html>
