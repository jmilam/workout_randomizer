<%= render "partials/alert" %>

<div id="profile-background">
  <div class="col-md-10 col-10 offset-1">
    <%= link_to edit_profile_path(@user.id) do %>
      <div class="row">
        <%= image_tag 'avatar-placeholder', class: "rounded-image" %>
      </div>
    <% end %>

    <div class="row">
      <div class="col-md-6 offset-6 col-sm-6 col-6 text-center"><%= link_to "Workout of the Day", kiosk_exercise_path(workout_group_id: @wod.workout_group_id) unless @wod.nil? %></div>
    </div>

    <div class="row">
      <div class="col-md-4 col-sm-4 col-4 detail-font-size">
        <b style="color:#fafafa;">Weight:</b> <div style="color:rgba(255, 255, 255, 0.5);"><%= @user.weight %> lbs.</div>
      </div>
      <div class="col-md-4 col-sm-4 col-4 detail-font-size" style="">
        <b style="color:#fafafa;">Height:</b> <div style="color:rgba(255, 255, 255, 0.5);"><%= @height[0] %>' <%= @height[1] %>"</div>
      </div>
      <div class="col-md-4 col-sm-4 col-4 detail-font-size">
        <div style="color:#fafafa">BMI: </div><div style="color:<%= @bmi_status %>;text-align:center;"><%= @bmi %></div>
      </div>
    </div>

    <div class="row">
      <% unless @workout.nil? %>
        <div class="container">
          <div class="card">
            <div class="card-body" style="margin-bottom:0px;">
              <div class="row">
                <div class="col-md-12 text-center"><%=  @weeks_remaining %> weeks remaining</div>
              </div>
              <div class="progress">
                <div class="progress-bar progress-bar-striped" role="progressbar" style="width: <%= progress_percent(@workout.duration, @weeks_doing_workout) %>" aria-valuenow="<%=  @workout.duration - @weeks_doing_workout %>" aria-valuemin="0" aria-valuemax="<%= @workout.duration %>"></div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

  <%= link_to "Workout History", workout_history_path, class: "btn btn workout-btn col-md-12 col-sm-12 col-12 text-center", style: "border-bottom: 1px solid #003259;color: #003259;" %>

  <%= link_to "Manually Enter Workout", manual_workout_path, class: "btn btn workout-btn col-md-12 col-sm-12 col-12 text-center", style:"border-bottom: 1px solid #003259;color: #003259;" %>

  <%= link_to "Start Workout", kiosk_exercise_path, class: "btn btn workout-btn col-md-12 col-sm-12 col-12 text-center", style:"border-bottom: 1px solid #003259;color: #003259;" unless @completed_workout %></div>

<div class="row" style="margin-top:10px;">
  <div class="col-md-10 col-10 offset-1">
    <div class="row">
      <div class="col-md-6 col-sm-6 col-6 text-center">
        <b>Workout Regularity:</b> <div style="color:#003259;"><%= User.regularities["#{@user.regularity_id}week"] %></div>
      </div>
      <div class="col-md-6 col-sm-6 col-6 text-center">
        <b>Current Workout:</b> <% unless @user.current_workout.nil? %><div style="color:#003259;"><%= @workout.name %></div> <%= link_to "Change Workout", stop_workout_path, method: :patch, class: "btn btn btn-danger btn-sm" %><% end %>
      </div>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-md-10 col-10 offset-1">
    <div class="row">
      <div class="col-md-6 col-sm-6 col-6 text-center">
        <b>Current Gym:</b> <div style="color:#003259;"><%= @user.gym.name %></div>
      </div>
      <div class="col-md-6 col-sm-6 col-6 text-center">
        <b>Workout Goal:</b> <div style="color:#003259;"><%= User.goals["#{@user.goal_id}"] %></div>
      </div>
    </div>
  </div>
</div>
