<div class="container">
  <%= render "partials/alert" %>
</div>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="container">
    <div class="col-md-12 col-sm-12 form-group">
      <%= f.label :email %>
      <%= f.text_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
    </div>

    <div class="col-md-12 col-sm-12 form-group">
      <%= f.label :password, class: '' %>
      <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
    </div>
  </div>
  <div class="container text-right" style="margin-top:15px;">
    <%= f.submit "Log in", class: "btn btn-lg btn-standard" %>
    <br/>
    <div style="margin-top:15px;">
      <%= render "devise/shared/links" %>
    </div>
  </div>
<% end %>
