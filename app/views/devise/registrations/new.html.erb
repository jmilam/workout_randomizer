<%= render "partials/alert" %>
<div class="row">
  <div class="col-md-10 col-10 offset-1">
    <%= form_for @user, url: new_user_registration_path do |f| %>
        <div>
          <div id="step1" title="Step 1 of 3">
            <div class="row">
              <div class="col-6 form-group">
                <%= f.label :first_name, "First Name", class: 'col-md-12' %>
                <%= f.text_field :first_name, class: 'col-md-12 form-control' %>
              </div>
              <div class="col-6 form-group">
                <%= f.label :last_name, "Last Name", class: 'col-md-12' %>
                <%= f.text_field :last_name, class: 'col-md-12 form-control' %>
              </div>
            </div>
            <div class="row">
              <div class="col-md-6 col-sm-12 col-12 form-group">
                <%= f.label :email, "Email *", class: 'col-md-12' %>
                <%= f.text_field :email, class: 'col-md-12 form-control' %>
              </div>
              <div class="col-md-6 col-sm-12 form-group">
                <%= f.label :password, "Password *", class: 'col-md-12' %>
                <%= f.password_field :password, class: 'col-md-12 form-control' %>
              </div>
            </div>
            <div class="row">
              <div class="col-6 form-group">
                <%= f.label :weight, "Weight (lb.)", class: 'col-md-12' %>
                <%= f.text_field :weight, class: 'col-md-12 form-control' %>
              </div>
              <div class="col-6 form-group">
                <%= f.label :height, "Height (in.)", class: 'col-md-12' %>
                <%= f.text_field :height, class: 'col-md-12 form-control' %>
              </div>
            </div>
            <div class="row">
              <div class="col-md-4 col-sm-12 form-group">
                <%= f.label :tdee, "Daily Calorie Amount", class: 'col-md-12' %>
                <%= f.text_field :tdee, class: 'col-md-12 form-control' %>
                <div class="text-muted">
                  Not sure what yours is? <%= link_to "Click Here", "http://boomslangfitness.com/home/assessment", target: :_blank  %>
                </div>
              </div>
              <div class="col-md-6 col-sm-10 col-10 form-group">
                <%= f.label :gym_id, "Gym *", class: 'col-md-12' %>
                <%= f.select :gym_id, @gyms.collect { |gym| [gym.name, gym.id] }, { prompt: "Select Your Gym", selected: @gym&.id}, class: 'col-md-12 form-control' %>
                <%= f.label 'Select Boomslang Fitness if your gym isn\'t on here', class: 'text-muted text-center' %>
              </div>
              <div class="col-md-2 col-sm-2 col-2 form-group text-center">
                <%= f.label :trainer, "Trainer", class: 'col-md-12 col-sm-12 col-12 text-center' %>
                <%= f.check_box :trainer %>
              </div>
            </div>
            <div class="row">
              <div class="col-md-2 col-sm-2 col-6 form-group text-center">
                <%= f.label :not_a_robot, "Not a robot", class: 'col-md-12 col-sm-12 col-12 text-center' %>
                <%= f.check_box :not_a_robot, {}, true, false %>
              </div>
              <div class="col-md-10 col-sm-10 col-6 form-group">
                <%= f.submit "Create User", class: "btn btn-lg btn-block btn-standard" %>
              </div>
            </div>
          </div>
        </div>

    <% end %>
  </div>
</div>

