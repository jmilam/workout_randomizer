<table class="table table-hover">
	<thead>
		<tr>
			<td>Message</td>
			<td>User</td>
			<td>Date</td>
		</tr>
	</thead>

	<tbody>
		<% @messages.each do |message| %>
			<tr>
				<td><%= message.detail %></td>
				<td><%= message.user_name %></td>
				<td><%= message.created_at.in_time_zone.strftime("%m/%d/%y %H:%M") %></td>
			</tr>
		<% end %>
	</tbody>
</table>

<div class="row">
  <%= link_to "New Message", new_message_path(message_group_id: @message_group.id), class: 'btn btn-info' %>
</div>