							<table class="table">
								<thead>
									<tr>
										<th>Workout Name</th>
										<th>Workout Date</th>
									</tr>
								</thead>
								<tbody>
									<% @popup_workouts.each do |popup| %>
										<tr>
											<td><%= popup.workout.name %></td>
											<td><%= popup.workout_date.strftime("%m-%d-%Y") %></td>
										</tr>
									<% end %>
								</tbody>
							</table>
							<%= button_to "Setup a Pop Up Workout", new_wod_path, method: :get, class: "btn btn-lg workout-btn" %>
						</div>
