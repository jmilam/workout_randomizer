<div class="container">
  <%= form_for @workout_group, url: workout_group_index_path, method: :post do |f| %>
    <div class="row">
      <div class="col-md-12 col-sm-12 form-group">
        <%= f.hidden_field :workout_id, value: @workout.id, class: 'col-md-12 form-control' %>
      </div>
    </div>

    <div class="row">
      <div class="col-md-12 col-sm-12 form-group">
        <%= f.label :name, class: 'col-md-12' %>
        <%= f.text_field :name, class: 'col-md-12 form-control' %>
      </div>
    </div>
    
    <div class="row">
      <% WorkoutGroup.day_of_the_weeks.each do |day_of_the_week_num, day_of_the_week_string| %>
          <div class="col-md-4 col-sm-4 col-12">
              <%= check_box_tag 'days_of_the_week[]', day_of_the_week_num, false %> <%= label_tag day_of_the_week_string %>
          </div>
      <% end %>
    </div>
    
    <div class="row">
      <div class="col-md-12 col-sm-12">
    	 <%= f.submit "Create Workout Group", class: 'btn btn-lg btn-block workout-btn' %>
      </div>
    </div>
  <% end %>
</div>