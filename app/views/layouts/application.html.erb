<!DOCTYPE html>
<html>
  <head>
    <title>Boomslang Fitness</title>
    <%= csrf_meta_tags %>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= favicon_link_tag 'favicon.ico' %>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="navbar-header">
        <%= link_to profile_index_path, class: 'navbar-brand' do %>
          <%= image_tag @gym.nil? ? 'logo-snake.png' : @gym.logo.url, size: '55x55', id: 'nav-image' %>
        <% end %>
      </div>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarToggler" aria-controls="navbarToggler" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarToggler">
        <ul class="navbar-nav">
          <li><%= link_to "Profile", profile_index_path, class: 'nav-link' %></li>
          <li><%= link_to "Workouts", list_workouts_path, class: 'nav-link' %></li>
          <li><%= link_to "Messages", inbox_index_path, class: 'nav-link' %></li>
          <% if current_user.gym.current_user_gym_admin(current_user) %>
            <li><%= link_to "Gym", gym_path(current_user.gym.id), class: 'nav-link' %></li>
            <li class="nav-item dropdown">
              <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Reporting</a>
              <div class="dropdown-menu">
                <%= link_to "New Users", admin_portal_new_users_path, class: 'dropdown-item' %>
                <%= link_to "Time Card", admin_portal_time_cards_path, class: 'dropdown-item' %>
              </div>
            </li>
          <% end %>
          <li><%= link_to "Sign Out", destroy_user_session_path, method: :delete, class: 'nav-link' %></li>
        </ul>
      </div>
    </nav>

    <%= yield %>
  </body>

  <script>
    $('.step-change').click(function(e) {
      e.preventDefault();
      let parent = $(this).parent();
      parent.toggle();
      $('#step-header').text(parent.next().attr('title'))
      $('#login-profile-background').css({"height":"550px"})
      parent.next().toggle();
    });

    $('.step-back').click(function(e) {
      e.preventDefault();
      let parent = $(this).parent();
      parent.toggle();
      $('#step-header').text(parent.prev().attr('title'))
      if (parent.prev().attr('id') === 'step1') {
        $('#login-profile-background').css({"height":"370px"})
      }
      parent.prev().toggle()
    })

</script>
</html>
