<table class="table table-hover">
	<thead class="boomslang-green">
		<tr >
			<td class="category-header" style="vertical-align: middle;">Subject</td>
			<td class="category-header" style="vertical-align: middle;">Date</td>
		</tr>
	</thead>

	<tbody>
		<% @message_groups.each do |message_group| %>
			<tr>
				<td><%= link_to message_group.subject, message_group_path(message_group.id) %></td>
				<td class="text-muted"><%= message_group.created_at.in_time_zone.strftime("%m/%d/%y %H:%M") %></td>
			</tr>
		<% end %>
	</tbody>
</table>

<div style="margin-left:15px;padding-right:20px;" class="pull-right">
	<%= link_to "New Message", new_message_path, class: 'btn btn-info' %>
</div>
