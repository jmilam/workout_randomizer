<div class="container" style="margin-top:15px">
	<div class="jumbotron jumbotron-fluid">
    <div class="container">
      <h1 class="display-4 text-center"><%= @message_group.subject %></h1>

    </div>
  </div>
	<% @messages.each do |message| %>
		<div class="row">
			<% if message.user_id != @user.id %>
				<%= image_tag message.user.avatar.url, class: "message-rounded-image" %>
			<% end %>
			<div class="<%= message.user_id == @user.id ? 'col-6 text-left speech-bubble-right' : 'col-6 text-right speech-bubble-left' %> " style="margin-bottom: 15px;min-height: 50px;font-size:0.9em;">
					<p><%= message.detail %></p>
						<p>--<%= message.user_name %></p>
			</div>

			<% if message.user_id == @user.id %>
				<%= image_tag message.user.avatar.url, class: "message-rounded-image" %>
			<% end %>
		</div>
	<% end %>
  <%= link_to "New Message", new_message_path(message_group_id: @message_group.id, recipient_id: @recipient&.id), class: 'btn btn-info col-6' %>
</div>

