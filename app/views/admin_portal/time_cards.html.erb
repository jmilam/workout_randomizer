<div class="container-fluid" style="height:100%;width:100%;">
	<div class="row" style="height:100%;">
		<div class="col-md-3" style="padding-top:20px;background:#003259;">
			<div class="col-md-11 offset-md-1">
				<p class="text-muted">
					Select date range below to see time for each employee
				</p>
				<%= select_tag :report_time_frame, options_for_select(['Current Week', 'Last Week', 'Month', 'Year'], 'Week'), class: 'form-control', style: 'margin-bottom:10px;' %>
			</div>
		</div>
		<div class="col-md-9" style="padding-top:20px;">
	    <div id="time_card_table">
				<%= render partial: 'time_card_table' %>
			</div>
	  </div>
	</div>
</div>

<script>
	$('#report_time_frame').on('change', function(){
		let time_frame = $(this).val();
		$.ajax({
		  url: "update_users",
		  method: "GET",
		  data: { date_range : time_frame },
		  dataType: "script"
		});
 
	});
</script>