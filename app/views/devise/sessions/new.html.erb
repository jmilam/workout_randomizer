<div class="card">
  <div class="card-header workout-header">
    <h2 class="text-center">Log in</h2>
  </div>
  <div class="card-body">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="row">
        <div class="col-md-12 col-sm-12 form-group field">
          <%= f.label :email, class: 'col-md-6 offset-md-3' %>
          <%= f.text_field :email, autofocus: true, autocomplete: "email", class: 'col-md-6 offset-md-3 form-control' %>
        </div>
      </div>

      <div class="row">
        <div class="col-md-12 col-sm-12 form-group field">
          <%= f.label :password, class: 'col-md-6 offset-md-3' %>
          <%= f.password_field :password, autocomplete: "off", class: 'col-md-6 offset-md-3 form-control' %>
        </div>
      </div>

      <div class="actions col-md-6 col-sm-6 offset-md-8">
        <%= f.submit "Log in", class: "btn btn-primary" %>
      </div>
    <% end %>

    <div class="col-md-6 offset-md-3">
      <%= link_to "Kiosk Mode", kiosk_path %>
    </div>
    <div class="col-md-6 offset-md-3">
      <%= render "devise/shared/links" %>
    </div>

  </div>
</div>
