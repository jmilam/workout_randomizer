<div class="container">
	<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
		<div class="card border-success" style="border:1px solid;">
		  <div class="card-header border-success boomslang-green">
		    <h4 class="text-center app-font">Forgot your password?</h4>
		  </div>
		  <div class="card-body bg-white" style="margin-bottom:0;">
		    <%= devise_error_messages! %>

			  <div class="field">
			    <%= f.label :email %><br />
			    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
			  </div>

			  <div class="actions">
			  </div>
		  </div>
		  <div class="card-footer boomslang-green">
		    <div class="text-right">
				  <%= f.submit "Send me reset password instructions", class: "btn btn-standard" %>
					<br/>    	
		      <%= render "devise/shared/links" %>
		    </div>
		  </div>
		</div>
	<% end %>
</div>