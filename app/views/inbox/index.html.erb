<table class="table table-hover">
	<thead>
		<tr style="color:white">
			<td>Subject</td>
			<td>Date</td>
		</tr>
	</thead>

	<tbody>
		<% @message_groups.each do |message_group| %>
			<tr style="color: white">
				<td><%= link_to message_group.subject, message_group_path(message_group.id) %></td>
				<td><%= message_group.created_at.in_time_zone.strftime("%m/%d/%y %H:%M") %></td>
			</tr>
		<% end %>
	</tbody>
</table>

<%= link_to "New Message", new_message_path, class: 'btn' %>

