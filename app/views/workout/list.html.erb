<div id="carouselExampleControls" class="carousel slide" data-ride="carousel" style="height:230px;">
  <div class="carousel-inner">
    <% @top_workouts&.each_with_index do |workout, idx| %>
      <% if idx == 0 %>
        <div class="carousel-item active">
          <!-- <img class="d-block w-100" src="..." alt="First slide">
        </div> -->
      <% else %>
        <div class="carousel-item">
       <!--    <img class="d-block w-100" src="..." alt="<%= idx %> slide">
        </div> -->
      <% end %>
        <%= render 'workout_card', workout: workout %>
      </div>
    <% end %>
  </div>
  <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>

<div class="container">
  <div style="padding-top:10px">
    <%= select_tag "filter", options_for_select(User.goals.map { |key, value| [value, key] }.prepend("All")), class: 'form-control' %>
  </div>
  <div style="padding-top:10px;padding-bottom:10px;">
    <%= link_to "New Workout", new_workout_path, class: 'btn btn-block workout-btn' %>
  </div>

  <% @workouts.each_with_index do |workout_group, idx| %>
    <div class="row">
      <% workout_group.each do |workout| %>
        <div class="col-md-6 col-sm-12 workout" category="<%= workout.category.id %>">
          <%= render 'workout_card', workout: workout %>
        </div>
      <% end %>
    </div>
    <br/>
  <% end %>
</div>

<script>
  $('#filter').on('change', function(){
    let selected_category = $(this).val();
    $.each($('.workout'), function(idx, value) {

      if (selected_category === "All") {
        $(this).css('display', '');
      } else if ($(this).attr('category') === selected_category){
        $(this).css('display', '');
      } else {
        $(this).css('display', 'none');
      };
    });
  });
</script>
