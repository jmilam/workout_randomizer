<div class="container-fluid">
  <div class="row">
    <div class="card col-md-6" style="padding-top:20px;padding-bottom:20px;">
      <div class="card-header boomslang-green text-center">
        <div style="color:white;">Create New Workout</div>
      </div>
      <div class="card-body bg-white" style="margin-bottom:0px">
        <%= link_to "New Workout", new_workout_path, class: 'btn btn-block bg-dark' %>
      </div>
    </div>

    <div class="card col-md-6" style="padding-top:20px;padding-bottom:20px;">
      <div class="card-header boomslang-green text-center">
        <div style="color:white;">Select Workout Type</div>
      </div>
      <div class="card-body bg-white" style="margin-bottom:0px">
        <%= select_tag "filter", options_for_select(User.goals.map { |key, value| [value, key] }.prepend("All")), class: 'form-control' %>
      </div>
    </div>
  </div>

  <% @workouts.each_with_index do |workout_group, idx| %>
    <div class="row">
      <% workout_group.each do |workout| %>
        <div class="col-md-6 col-sm-12 workout" category="<%= workout.category.id %>">
          <%= render 'workout_card', workout: workout, editable: true %>
        </div>
      <% end %>
    </div>
    <br/>
  <% end %>
</div>

<script>
  $('#filter').on('change', function(){
    let selected_category = $(this).val();
    $.each($('.workout'), function(idx, value) {

      if (selected_category === "All") {
        $(this).css('display', '');
      } else if ($(this).attr('category') === selected_category){
        $(this).css('display', '');
      } else {
        $(this).css('display', 'none');
      };
    });
  });
</script>
