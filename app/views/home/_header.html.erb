<header class="masthead text-white text-center" style="padding-top: 3em;padding-bottom: 3em;">
  <div class="overlay"></div>
  <div class="container">
    <div class="row">
      <div class="col-xl-9 mx-auto">
        <h1 class="mb-5">I'm interested, tell me more about your services offered!</h1>
      </div>
      <div class="col-md-10 col-lg-8 col-xl-7 mx-auto">
				<%= form_for :user, url: more_info_path, method: :post do |f| %>
          <div class="row">
            <div class="col-12 col-md-6 mb-2 mb-md-0">
              <%= f.text_field :first_name, class: "form-control form-control-lg", placeholder: "First Name" %>
            </div>
            <div class="col-12 col-md-6 mb-2 mb-md-0">
              <%= f.text_field :last_name, class: "form-control form-control-lg", placeholder: "Last Name" %>
            </div>
          </div>

          <div class="row">
            <div class="col-12 col-md-8 mb-2 mb-md-0">
            	<%= f.email_field :email, class: "form-control form-control-lg", placeholder: "Enter your email..." %>
            </div>
            <div class="col-12 col-md-4">
            	<%= f.submit "Request Info", class: "btn btn-block btn-lg btn-primary" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</header>
