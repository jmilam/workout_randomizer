<div class="container" style="margin-top:20px;">
	<div class="jumbotron boomslang-green">
		<h4 class="text-center">Daily Food Logs</h4>
		<p class="text-center"><%= link_to "Create Food", new_food_path %></p>
	</div>
	<div class="card">
	  <div class="card-body">
	    <table class="table table-striped">
				<thead>
					<tr>
						<td style="text-align:center;">Log Date</td>
						<td style="text-align:center;">Total Calories</td>
						<td />
					</tr>
				</thead>
				<tbody>
					<% @daily_logs.each do |daily_log| %>
						<tr>
							<td style="vertical-align: middle;text-align:center;"><%= daily_log.calendar_date.strftime("%m/%d/%Y") %></td>
							<td style="vertical-align: middle;text-align:center;"><%= daily_log.total_calories %></td>
							<td>
								<div class="btn-group-vertical">
									<%= link_to "View Log", daily_log_path(daily_log.id), class: 'btn btn-sm', style: 'background-color:#003259;color:white;' %><br/>
									<%#= link_to "Add Food", edit_daily_log_path(daily_log.id), class: 'btn btn-sm btn-warning' if daily_log.calendar_date.in_time_zone == Date.today.in_time_zone %></td>
								</div>
						</tr>
					<% end %>
				</tbody>
			</table>
			<%= link_to "New Log", new_daily_log_path, class: 'btn btn-primary' if @today_log.nil? %>
	  </div>
	</div>
</div>
