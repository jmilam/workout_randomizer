											<td style="vertical-align: middle;">
												<% if user.account_disabled %>
													<%= link_to "Enable Account", enable_user_path(user.id), method: :put %>
												<% else %>
													<%= link_to "Disable Account", disable_user_path(user.id), method: :put %>
